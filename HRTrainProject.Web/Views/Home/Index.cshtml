@model HRTrainProject.Core.ViewModels.UserProfile

@using HRTrainProject.Web.ViewComponents

@inject IViewLocalizer localizer
@inject IHtmlLocalizer<SharedResource> sharedLocalizer

@{
    ViewData["Title"] = localizer["Home Page"];
}
<div class="ui grid">
    <div class="row">
        <h1 class="ui huge header">
            @localizer["DashBoard"]
        </h1>
    </div>
    <div class="ui divider"></div>
    <div class="row">
        <div class="ui four column divided grid">
            <div class="column">
                <h2>說明</h2>
                <ul>
                    <li>@localizer["TitleContent"]</li>
                </ul>
            </div>
            <div class="column">
                <h2>語系</h2>
                <ul>
                    <li>CurrentCulture: @CultureInfo.CurrentCulture.Name </li>
                    <li>CurrentUICulture: @CultureInfo.CurrentUICulture.Name </li>
                </ul>
            </div>
            <div class="column">
                <h2>基本資料</h2>
                <div>@Html.DisplayNameFor(m => m.NAME) : @Model.NAME</div>
                <div>@Html.DisplayNameFor(m => m.PHONE) : @Model.PHONE</div>
            </div>
        </div>

    </div>
    <div class="ui hidden section divider"></div>
    <div class="row">
        <h1 class="ui huge header">
            公告欄
        </h1>
    </div>
    <div class="ui divider"></div>

    @await Component.InvokeAsync(nameof(BulletinListViewComponent), new { class_type = ViewBag.BulletinClassType })
</div>
